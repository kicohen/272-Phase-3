<div class="col-md-7">

<div class="card">
<ul class="list-group">
  <li class="list-group-item similar_items" style="border-bottom-right-radius: 0; border-bottom-left-radius: 0;">Price History:</li>
</ul>
<table id="history" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Price</th>
  </thead>
  <tbody>
  <% for price in @price_history %>
  <tr>
    <td><%= price.start_date %></td>
    <td><%= price.end_date %></td>
    <td><%= number_to_currency(price.price) %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<style type="text/css">
  .dataTables_info{
    margin-left: 5px;
    margin-top: -5px;
    padding: 0;
  }
  .dataTables_paginate{
    padding: 0 !important;
  }
</style>
</div>
</div>