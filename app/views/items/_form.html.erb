<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= f.label :name, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
    <div class="form-group row">
    <%= f.label :color, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.text_field :color, class: "form-control" %>
    </div>
  </div>
    <div class="form-group row">
    <%= f.label :category, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.select(:category, [['Boards','boards'],['Pieces','pieces'],['Clocks','clocks'],['Supplies','supplies']], class: "form-control") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :weight, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.number_field :weight, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :inventory_level, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.number_field :inventory_level, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :reorder_level, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.number_field :reorder_level, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :active, class: "col-2 col-form-label" %>
    <div class="col-10">
    <%= f.check_box :active, class: "form-control " %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.submit "Create Item", class: "btn btn-primary form-control"%>
  </div>
<% end %>

