<% content_for :pgSpecificNavLink do %>
  <%= link_to "Purchases", purchases_path, class: "navbar-brand" %>
<% end %>

<% content_for :pgSpecificButtons do %>
<button class="btn btn-primary my-2 my-sm-0 bg_blue_main search" type="submit">Search</button>
<button class="btn btn-primary my-2 my-sm-0 bg_blue_dark entries" type="submit">Entries</button>
<button class="btn btn-success my-2 my-sm-0" type="submit"><%= link_to "Create Purchase", new_purchase_path, class: "white_text" %></button>
<% end %>

<h4>Recent Purchases</h4>
<br>

<table class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <th>Item</th>
    <th>Quantity</th>
  <th>Date</th>
  </thead>
  <% for purchase in @purchases %>
    <% if purchase.quantity < 0 %>
    <tr class="danger">
    <% else %>
    <tr>
    <% end %>
      <td><%= link_to purchase.item.name, item_path(purchase.item) %></td>
      <td><%= purchase.quantity %></td>
      <td><%= purchase.date.strftime("%m/%d/%y") %></td>
    </tr>
  <% end %>
</table>
